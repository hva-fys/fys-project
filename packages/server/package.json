{
  "name": "nodejs-typescript-example",
  "version": "1.0.0",
  "description": "Starter project for nodejs projects with typescript",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "build": "(cd ../client/ && npm run build) && npm run copy_public && npm run commit_build",
    "copy_public": "rm -rf public && cp -r ../client/dist ./public",
    "commit_build": "git add ./public/ && git commit -m 'chore(build): updates public folder' ",
    "start-background": "forever start index.js",
    "stop-background": "forever stop index.js"
  },
  "author": {
    "name": "Abdalla Elmedny",
    "email": "abdelelmedny@gmail.com",
    "website": "https://abdelelmedny.firebaseapp.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv-safe": "^4.0.1",
    "@types/express": "^4.11.1",
    "@types/lodash": "^4.14.105",
    "@types/socket.io": "^1.4.31",
    "forever": "^0.15.3",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "rxjs": "^5.5.7",
    "socket.io": "^2.0.4",
    "ts-express-decorators": "^4.8.0",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2",
    "mysql2": "^1.5.2",
    "sequelize": "^4.37.1",
    "sequelize-typescript": "^0.6.3",
    "dotenv-safe": "^5.0.1"
  }
}
